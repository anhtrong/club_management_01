<%= render "request/header" %>
<section class="site-content site-section">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-8 col-md-offset-2 site-block">
        <h3 class="h2 site-heading center"><strong>
          <%= t "request" %></strong> <%= t "organization_sign" %>
        </h3>
        <%= form_for [:user, @request], html: {id: "form-contact"} do |f|%>
          <div class="form-group">
            <label for="contact-name"><%= t "organization_name" %></label>
            <%= f.text_field :name, placeholder: t("organization_name"),
              class: "form-control input-lg", id: "contact-name" %>
          </div>
          <div class="form-group">
            <label for="contact-name"><%= t "organization_phone" %></label>
            <%= f.number_field :phone, placeholder: t("organization_phone"),
              class: "form-control input-lg", id: "contact-name" %>
          </div>
          <div class="form-group">
            <label for="contact-name"><%= t "organization_email" %></label>
            <%= f.email_field :email, placeholder: t("organization_email"),
              class: "form-control input-lg", id: "contact-name" %>
          </div>
          <div class="form-group">
            <label for="contact-name"><%= t "organization_address" %></label>
            <%= f.text_field :location, placeholder: t("organization_address"),
              class: "form-control input-lg", id: "contact-name" %>
          </div>
          <div class="form-group Logo-club">
            <div class="row">
              <div class="col-md-3">
                <label for="contact-email"><%= t "organization_logo" %></label>
                <%= f.file_field :logo, class: "form-control", id: "example-file-input" %>
              </div>
              <div class="col-md-8">
                  <img src="https://upload.wikimedia.org/wikipedia/en/0/0a/Hurling_club_logo.png" height="100">
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="contact-message"><%= t "description" %></label>
            <%= f.text_area :description, placeholder: t("description_request"),
              class: "form-control input-lg", id: "contact-message", row: 10  %>
          </div>
          <div class="form-group center">
            <%= f.submit t("send_request"), class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
