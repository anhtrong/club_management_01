<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t "name" %></th>
      <th><%= t "description" %></th>
      <th class="text-center"><%= t "status" %></th>
      <th class="text-center"><%= t "delete" %></th>
    </tr>
  </thead>
  <tbody>
    <% @requests.each do |request| %>
      <tr class="tr-request-<%= request.id %>">
        <td class="text-center"><%= request.name %></td>
        <td class="text-center"><%= request.description %></td>
        <td class="text-center"><%= request_status request %></td>
        <td class="text-center">
        <%= link_to request_path(request, type: request.class.name),
          remote: true, method: :delete, class: "btn btn-danger" do %>
          <i class="fa fa-times"></i>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tfoot>
</table>
