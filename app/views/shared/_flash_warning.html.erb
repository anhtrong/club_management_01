<% if flash.any? %>
  <% flash.each do |key, value| %>
  <section class="notify">
    <%= content_tag :div, value, class: "alert alert-success" do %>
      <%= value %>
      <%= link_to t("do_nothing"), class: "close-message" do %>
        <span class="fa fa-times"></span>
      <% end %>
    <% end %>
  </section>
  <% end %>
<% end %>
